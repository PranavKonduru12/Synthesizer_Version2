<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_synthesizer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.konduru91976.synthesizer_version2.SynthesizerActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/eButton"
        android:id="@+id/eButton"
        android:onClick="onButton1Click"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fButton"
        android:id="@+id/fButton"
        android:onClick="onButton2Click"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/eButton"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mChallenge1"
        android:id="@+id/mChallenge1"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/fButton"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/mChallenge11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mChallenge11"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />
    <NumberPicker
        android:id="@+id/numberPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/numberPicker2" />
    <NumberPicker
        android:id="@+id/numberPicker2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/challenge11Check"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:text="Play Verse 2"
        android:layout_below="@+id/mChallenge1"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />
</RelativeLayout>
